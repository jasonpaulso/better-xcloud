
// pipboy

.pipboy-root {
  display: block;
  font-family: monospace;
  position: fixed;
  right: var(--pipboy-left, 20px);
  bottom: var(--pipboy-top, 20px);
  z-index: var(--pipboy-z-index, 1000);
}
.pipboy {
  background-color: #000;
  border: 4px solid #2a2a2a;
  border-radius: 10px;
  padding: 10px;
  box-shadow: 0 0 20px #0f380f;
  position: relative;
  opacity: 0.05;
  display: flex;
  flex-direction: column;
  gap: 10px;
}
.pipboy.on {
  opacity: 0.1;
}
.pipboy&:hover {
  opacity: 0.7;
}
.pipboy-content {
  display: flex;
  flex-direction: column;
  gap: 10px;
}
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.screen {
  background-color: #000;
  border: 2px solid #0f0;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #0f0;
  font-size: 20px;
  text-shadow: 0 0 5px #0f0;
  font-family: monospace;
  padding: 10px;
  animation: blink_text 0.7s infinite;
}
.buttons {
  display: flex;
  justify-content: space-between;
  gap: 10px;
}
.btn {
  background-color: #1a1a1a;
  border: 2px solid #0f0;
  border-radius: 5px;
  padding: 5px;
  cursor: pointer;
  font-family: monospace;
  font-size: 16px;
  color: #0f0;
  transition: all 0.3s ease;
  outline: none;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0.6rem;
  overflow: visible;
}

.btn svg {
  height: 100%;
}
.btn:hover {
  background-color: #2a2a2a;
  box-shadow: 0 0 10px #0f0;
}
.btn:active {
  background-color: #0f0;
  color: #000;
  animation: pulse 2s infinite;
}
@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}
@keyframes blink_text {
  0% {
    color: #0f0;
  }
  49% {
    color: #0f0;
  }
  50% {
    color: #000;
  }
  100% {
    color: #000;
  }
}
.btn.active {
  background-color: #0f0;
  color: #000;
  box-shadow: 0 0 15px #0f0;
  animation: pulse 0.5s infinite;
}
.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}
.power-switch {
  position: relative;
  width: 32px;
  height: 22px;
  background-color: #2a2a2a;
  border: 2px solid #0f0;
  border-radius: 16px;
  cursor: pointer;
  display: flex;
  align-items: center;
  padding: 2px;
}
.power-switch::after {
  content: '';
  background-color: #0f0;
  border-radius: 50%;
  transition: all 0.3s;
  height: 100%;
  width: 50%;
}
.on .power-switch::after {
  transform: translateX(100%);
}
.led {
  top: 10px;
  left: 10px;
  width: 10px;
  height: 10px;
  background-color: #300;
  border-radius: 50%;
  transition: all 0.3s;
}
.on .led {
  background-color: #f00;
  box-shadow: 0 0 5px #f00;
}
